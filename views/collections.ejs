<%-include('header');%>
<h3 style="padding-left: 10px;font-weight: 600; color: rgb(32, 169, 32); font-family: 'Courier New', Courier, monospace;">Your products</h3>
<section class="shop-content">
  <!-- <h1>hello</h1> -->

    <% products.forEach(function(product){ %>
     
      <a href="/<%=product.title%>">
        <!-- <div class="box"> -->
          <div class="box-content">
            <h2><%=product.title%></h2> 
            <div class="box-img">
              <img id="<%=product._id%>" class="img1" src="/images/<%=product.img%>" alt="">
            </div>
            <p> Price = <i class="fa-sharp fa-solid fa-indian-rupee-sign"></i><%=product.price%></p>
            <a value="<%=product._id%>" href="#<%=product._id%>"></a> 
            <a style="color: white;"  role="button" href="/buy">Buy now</a>
          
            <div class="button-container">
              <form class="buy-form" action="/buy" method="get">
                <button class="indexbutton btn btn-success" name="productId" value="<%= product._id %>" type="submit">Buy Now</button>
              </form>
              
              <form class="cart-form" action="/addtocart" method="post">
                <button class="indexbutton btn btn-primary" name="button" value="<%= product._id %>" type="submit">Add to Cart</button>
              </form>
            </div>
          </div>
        <!-- </div> -->
      </a>
    <% }) %>
  </section>
<%- include('footer'); %>
